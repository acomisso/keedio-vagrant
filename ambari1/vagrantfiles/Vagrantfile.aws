	}
        aws.user_data = "#!/bin/bash\nsed -i -e 's/^HOSTNAME=.*internal/HOSTNAME=AWSKDSNode3/g' /etc/sysconfig/network"
        aws.user_data = "#!/bin/bash\nhostname AWSKDSNode3"
